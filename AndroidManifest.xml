<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.tlasica.moodblog"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="16" />

	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/ic_launcher"
        android:theme="@style/AppTheme" >
        <activity
            android:name="pl.tlasica.moodblog.MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pl.tlasica.moodblog.ConfirmSaveActivity"
            android:exported="false"
            android:label="@string/title_activity_confirm_save"
            android:parentActivityName="pl.tlasica.moodblog.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.tlasica.moodblog.MainActivity" />
        </activity>
        <activity
            android:name="pl.tlasica.moodblog.HistoryActivity"
            android:label="@string/title_activity_history"
            android:parentActivityName="pl.tlasica.moodblog.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.tlasica.moodblog.MainActivity" />
        </activity>
        <activity
            android:name="pl.tlasica.moodblog.StatisticsActivity"
            android:label="@string/title_activity_statistics"
            android:parentActivityName="pl.tlasica.moodblog.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.tlasica.moodblog.MainActivity" />
        </activity>
                
        <!-- AdMobActivity definition -->
		<activity android:name="com.google.ads.AdActivity" 
   			android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>

        
    </application>
    
	
</manifest>